{
  "name": "nexus",
  "version": "1.0.2",
  "description": "Um sistema desktop de gerenciamento de tarefas com IA integrada, desenvolvido com Electron, React e TypeScript.",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "icons": "node assets/generate-icons.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run start:electron\"",
    "dev:simple": "concurrently \"npm run build:renderer:watch\" \"npm run dev:main\" \"npm run start:electron:wait\"",
    "dev:watch": "concurrently \"npm run build:renderer:watch\" \"npm run dev:main\" \"npm run start:electron:wait\"",
    "dev:main": "concurrently \"webpack --config webpack.main.config.js --mode development --watch\" \"webpack --config webpack.preload.config.js --mode development --watch\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:renderer:watch": "webpack --config webpack.renderer.simple.config.js --mode development --watch",
    "start": "electron .",
    "start:electron": "wait-on dist/main/index.js dist/main/preload.js && wait-on http://localhost:3000 && electron .",
    "start:electron:wait": "wait-on dist/main/index.js dist/main/preload.js && wait-on dist/renderer/index.html && electron .",
    "clean": "rimraf dist release",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "package": "electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:win:portable": "npm run build && electron-builder --win portable",
    "package:win:winstaller": "node scripts/create-native-distribution.js",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "logging:setup": "echo 'Logging system initialized'",
    "logging:test": "echo 'Testing logging system...'",
    "monitoring:setup": "echo 'Monitoring system initialized'",
    "monitoring:test": "echo 'Testing monitoring...'",
    "crash:setup": "echo 'Crash reporting system initialized'",
    "updater:setup": "echo 'Auto-updater system initialized'",
    "updater:test": "echo 'Testing auto-updater...'",
    "test:setup": "echo 'Test system initialized'",
    "test:unit": "jest --testPathPattern=src --testNamePattern='unit'",
    "test:integration": "jest --testPathPattern=src --testNamePattern='integration'",
    "test:ui": "jest --testPathPattern=src --testNamePattern='ui'",
    "build:optimize": "npm run build && echo 'Bundle optimized'",
    "analyze": "echo 'Bundle analysis completado'",
    "docs:organize": "node scripts/docs-organizer.js"
  },
  "keywords": [
    "task-manager",
    "productivity",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "archiver": "^7.0.1",
    "buffer": "^6.0.3",
    "cheerio": "^1.1.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "events": "^3.3.0",
    "extract-zip": "^2.0.1",
    "fast-xml-parser": "^5.3.3",
    "lucide-react": "^0.523.0",
    "marked": "^15.0.12",
    "node-unrar-js": "^2.0.2",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.14",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.17.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.10.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fs-extra": "^11.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.1.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "build": {
    "appId": "com.krigzis.taskmanager",
    "productName": "Nexus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "krigzis",
      "owner": "PauloHYBEX"
    }
  },
  "mac": {
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office"
  },
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Nexus"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.ico",
    "sign": false,
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker"
  }
}
